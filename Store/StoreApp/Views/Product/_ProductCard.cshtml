@model Product
<div class="col-sm-12 col-md-6 col-lg-4 my-1">

    <div class="card" style="width: 18rem; ">
        <img src="@Model?.ImageUrl" class="card-img-top" alt="..." style="height: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model?.ProductName</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.
            </p>

            <div class=" btn btn-group">
                <a asp-action="Get" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="fa-solid fa-arrow-right"></i>
                    Details
                </a>

                <form class="" id="@Model?.Id" asp-page="/cart" method="post">
                    <input type="hidden" name="productId" value="@Model?.Id">
                    @* <input type="hidden" asp-for="@(Model.Id)"> kursta bu satýrla product ýd yolluyor fakat null referans olarak 0 deðer yolluyor o yüzden yukarýdaki düzenleme yapýldý *@
                    <input type="hidden" name="returnUrl" value="/Product/Get/@Model?.Id">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-cart-plus"></i>
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>
