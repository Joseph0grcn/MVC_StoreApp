@model Product
@using StoreApp.Infrastructe.Extensions
<div class="col-sm-12 col-md-6 col-lg-4 my-1">

    <div class="card" style="width: 18rem; ">

        <div class="card-header text-center ">
            @Model?.ProductName
        </div>

        <img class="p-1" src="@Model?.ImageUrl" class="card-img-top" alt="..." style="height: 18rem;">

        <div class="card-body">
            <div class="card-text">
                <div class="text-danger text-center lead p-2 rounded-2">
                    @Model?.Price.ToString("C2")
                </div>

            </div>
            <p class="card-text">@Model?.Summary</p>
            <div class="d-flex justify-content-center">

                <div class=" btn btn-group">
                    <a asp-controller="Product" asp-action="Get" asp-route-id="@Model?.Id"
                       class="btn btn-outline-secondary rounded-2">
                        <i class="fa-solid fa-arrow-right"></i>
                    </a>

                    <form class="" id="@Model?.Id" asp-page="/cart" method="post">
                        <input type="hidden" name="productId" value="@Model?.Id">
                        @* <input type="hidden" asp-for="@(Model.Id)"> kursta bu satýrla product ýd yolluyor fakat null referans olarak 0 deðer yolluyor o yüzden yukarýdaki düzenleme yapýldý *@
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
                        @*value="/Product/Get/@Model?.Id">*@

                        <button type="submit" class="btn btn-outline-secondary mx-1">
                            <i class="fa fa-cart-plus"></i>
                        </button>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
